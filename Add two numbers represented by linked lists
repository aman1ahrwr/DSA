Node* reverse(Node* head){
        Node* curr = head;
        Node* prev = NULL;
        Node* temp;
        while(curr){
            temp = curr->next;
            curr->next=prev;
            prev=curr;
            curr=temp;
        }
        return prev;
    }
    //Function to add two numbers represented by linked list.
    struct Node* addTwoLists(struct Node* first, struct Node* second)
    {
        first = reverse(first);
        second = reverse(second);
        int s = 0;
        int c = 0;
        Node* res = NULL;
        Node* curr = NULL;
        
        while(first || second){
            s = c + (first?first->data:0) + (second?second->data:0);
            c = (s>=10)?1:0;
            s = s%10;
            Node* temp = new Node(s);
            if(res==NULL){
                res=temp;
            }else{
                curr->next = temp;    
            }
            curr=temp;
            if(first) first=first->next;
            if(second) second=second->next;
        }
        
        if(c>0){
            Node* temp = new Node(c);
            curr->next=temp;
            curr=temp;
        }
        res = reverse(res);
        return res;
    }
